{%extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-4">Liste des licenciés de la catégorie {{ categorie.nom }}</h1>
        {% if categorie is not empty %}
    <table class="table table-hover mt-4">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Numéro de licence</th>
        </tr>
        </thead>
        <tbody>
        {% for licencie in licencies %}
            {% if categorie.id == licencie.categorie.id %}
        <tr class="table-dark">
            <td>{{ licencie.nom }}</td>
            <td>{{ licencie.prenom }}</td>
            <td>{{ licencie.numeroLicence }}</td>
        </tr>
            {% endif %}
        {% endfor %}
        {% endif %}
        </tbody>
    </table>
        <button class="btn btn-primary" onclick="window.location.href='{{ path('categorie.showContact',{'id': categorie.id}) }}'">Contact des licenciés</button>
    </div>
{% endblock %}